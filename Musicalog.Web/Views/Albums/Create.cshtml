@model Musicalog.Web.Models.CreateAlbumRequestModel

@using (Html.BeginForm("Create", "Albums", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <strong>New Album Details</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="col-lg-6 col-md-12">
                    @Html.LabelFor(x => x.AlbumType, "Album Type")
                    @Html.EnumDropDownListFor(x => x.AlbumType, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    @Html.LabelFor(x => x.ArtistId, "Artist")
                    @Html.DropDownListFor(x => x.ArtistId, Model.Items, new { @class = "form-select" })
                </div>
                <div class="col-lg-6 col-md-12">
                    @Html.LabelFor(x => x.Stock)
                    @Html.EditorFor(x => x.Stock, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="button" data-navigate="@Url.Action("List", "Albums")" class="btn btn-outline-danger">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}